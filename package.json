    "@types/socket.io": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/jsonwebtoken": "^9.0.7",
    "dotenv": "^16.4.5",
    "mongo-seeding": "^4.0.1",
    "ts-node": "^10.9.2",
